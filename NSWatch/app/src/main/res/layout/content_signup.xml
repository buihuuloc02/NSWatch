<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:background="@drawable/start_savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="@string/text_button_start_smoking"
        android:id="@+id/button3"
        android:onClick="saveBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editTextPrice"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_please_enter_data"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_number_cigarettes"
        android:id="@+id/textView3"
        android:layout_marginTop="52dp"
        android:textSize="18dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editTextNum"
        android:textSize="50dp"
        android:maxLength="2"
        android:gravity="right"
        android:textColor="#0E6E6C"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_number_money"
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editTextNum"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editTextPrice"
        android:textSize="50dp"
        android:maxLength="3"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/editTextNum"
        android:layout_alignStart="@+id/editTextNum"
        android:gravity="right"
        android:textColor="#0E6E6C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_unit_cigarettes"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/editTextNum"
        android:layout_alignBottom="@+id/editTextNum"
        android:layout_toRightOf="@+id/editTextPrice"
        android:layout_toEndOf="@+id/editTextPrice"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_unit_package"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/editTextPrice"
        android:layout_alignBottom="@+id/editTextPrice"
        android:layout_toRightOf="@+id/editTextPrice"
        android:layout_toEndOf="@+id/editTextPrice"
        android:textColor="#000000" />

</RelativeLayout>
