<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPrice"
            android:layout_centerInParent="true"
            android:layout_marginTop="33dp"
            android:background="@drawable/start_savebtn"
            android:gravity="center"
            android:onClick="saveBtn"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:text="@string/text_button_start_smoking"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/text_please_enter_data"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="52dp"
            android:text="@string/text_number_cigarettes"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:ems="3"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#0E6E6C"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/editTextNum"
            android:layout_marginTop="30dp"
            android:text="@string/text_number_money"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextNum"
            android:layout_alignStart="@+id/editTextNum"

            android:layout_below="@+id/textView4"
            android:ems="3"
            android:gravity="right"
            android:textColor="#0E6E6C"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextNum"
            android:layout_alignBottom="@+id/editTextNum"
            android:layout_toEndOf="@+id/editTextPrice"
            android:layout_toRightOf="@+id/editTextPrice"
            android:text="@string/text_unit_cigarettes"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextPrice"
            android:layout_alignBottom="@+id/editTextPrice"
            android:layout_toEndOf="@+id/editTextPrice"
            android:layout_toRightOf="@+id/editTextPrice"
            android:text="@string/text_unit_package"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>